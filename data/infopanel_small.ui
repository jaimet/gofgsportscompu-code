CIwUIElement {
	name "InfoPanel_Small"
	sizeHint { 120 120 }
	//aspectRatio  { 2 1 }
	//sizeMin { 120 120 }
	//sizeMax { 120 120 }
	//sizeToContent true
	CIwUIImage {
		name "Background"
		texture "Background"
	}

	CIwUIElement {
		name "Grid_0"
		
		CIwUIElement {
			name "UnitLayout"
			
			CIwUIImage {
				name "Image"
				size { 24 24 }
				sizeMin { 24 24 }
				sizeMax { 24 24 }
				sizeHint { 24 24 }
			}

			CIwUILabel {
				name "UnitLabel"
				style <label_medium>
				caption "Unit"
				sizeMax  { -1 24 }
				sizeToContent false
				alignH centre
				alignV top
			}

			CIwUILayout {
				sizeToSpace true

				element {
					name "Image"
				}
				element {
					name "UnitLabel"
				}
			}
			
//			CIwUILayoutHorizontal 
//			{
//				//sizeToSpace true
				sizeMax { -1 24 }
//			
//				element {
//					name "Image"
//				}
//				element {
//					name "UnitLabel"
//				}
//			}
		}
		
		CIwUIAutoSizeLabel {
			name "CurrentLabel"
			style <label_large>
			font "font_huge"
			caption ""
			sizeMax  { -1 -1 }
			//sizeToContent false
			alignH centre
			alignV top
		}

		CIwUIImage {
			name "CurrentImage"
			texture "delete"
			visible false
		}

		CIwUILayoutGrid {
			name "DisplayGrid"
			numColumns 1
			numRows 2
			sizeToSpace true
			
			element {
				name "UnitLayout"
				//columnSpan 2
			}
			element {
				name "CurrentLabel"
				//columnSpan 2
				row 1
				//alignH "centre"
				alignV top
			}
			element {
				name "CurrentImage"
				row 1
			}
		}
	}

	CIwUILayout {
		name "innerLayout"
		sizeToSpace true
				
		element {
			name "Background"
		}
		element {
			name "Grid_0"
		}
	}
}
