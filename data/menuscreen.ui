CIwUIElement {
	name "MenuScreen"

	CIwUIButton {
		name "BGButton"
		drawableType "image"
		caption ""
		texture "background"
		sizeMax { -1 -1 }
		modulatesColour true
		colour { 255 255 255 192 }
	}

	CIwUIElement {
		name "MenuButtons"

		CIwUIButton {
			name "MenuButton_Tracks"

			OnButtonClick  { "CB_MSTracksButtonClick" }

			drawableType "image"
			caption ""
			texture "background"

			size { -1 48 }
			sizeMax { -1 48 }
			sizeMin { -1 48 }

			CIwUIImage {
				name "MB_T_ButtonIcon"

				texture "textfile32"

				size { 32 32 }
				sizeMax { 32 32 }
				sizeMin { 32 32 }
			}

			CIwUILabel {
				name "MB_T_ButtonLabel"
				style <label_large>
				caption "Manage Tracks"
				sizeMax { -1 32 }
				sizeToContent true
			}

			CIwUILayout {
				sizeToSpace true

				element {
					name "MB_T_ButtonIcon"
					alignV middle
					alignH left
				}
				element {
					name "MB_T_ButtonLabel"
					alignV middle
					alignH centre
				}
			}
		}

		CIwUIButton {
			name "MenuButton_About"

			OnButtonClick  { "CB_MSAboutButtonClick" }

			drawableType "image"
			caption ""
			texture "background"

			size { -1 48 }
			sizeMax { -1 48 }
			sizeMin { -1 48 }

			CIwUIImage {
				name "MB_A_ButtonIcon"

				texture "infoabout32"

				size { 32 32 }
				sizeMax { 32 32 }
				sizeMin { 32 32 }
			}

			CIwUILabel {
				name "MB_A_ButtonLabel"
				style <label_large>
				caption "About"
				sizeMax { -1 32 }
				sizeToContent true
			}

			CIwUILayout {
				sizeToSpace true

				element {
					name "MB_A_ButtonIcon"
					alignV middle
					alignH left
				}
				element {
					name "MB_A_ButtonLabel"
					alignV middle
					alignH centre
				}
			}
		}

		CIwUIButton {
			name "MenuButton_Settings"

			OnButtonClick  { "CB_MSSettingsButtonClick" }

			drawableType "image"
			caption ""
			texture "background"

			size { -1 48 }
			sizeMax { -1 48 }
			sizeMin { -1 48 }

			CIwUIImage {
				name "MB_S_ButtonIcon"

				texture "configure32"

				size { 32 32 }
				sizeMax { 32 32 }
				sizeMin { 32 32 }
			}

			CIwUILabel {
				name "MB_S_ButtonLabel"
				style <label_large>
				caption "Settings"
				sizeMax { -1 32 }
				sizeToContent true
			}

			CIwUILayout {
				sizeToSpace true

				element {
					name "MB_S_ButtonIcon"
					alignV middle
					alignH left
				}
				element {
					name "MB_S_ButtonLabel"
					alignV middle
					alignH centre
				}
			}
		}

		CIwUIButton {
			name "MenuButton_Close"

			OnButtonClick  { "CB_MSCloseButtonClick" }

			drawableType "image"
			caption ""
			texture "background"

			size { -1 48 }
			sizeMax { -1 48 }
			sizeMin { -1 48 }

			CIwUIImage {
				name "MB_C_ButtonIcon"

				texture "close32"

				size { 32 32 }
				sizeMax { 32 32 }
				sizeMin { 32 32 }
			}

			CIwUILabel {
				name "MB_C_ButtonLabel"
				style <label_large>
				caption "Close"
				sizeMax { -1 32 }
				sizeToContent true
			}

			CIwUILayout {
				sizeToSpace true

				element {
					name "MB_C_ButtonIcon"
					alignV middle
					alignH left
				}
				element {
					name "MB_C_ButtonLabel"
					alignV middle
					alignH centre
				}
			}
		}

		CIwUILayoutVertical {
			element {
				name "MenuButton_Tracks"
			}
			element {
				name "MenuButton_Settings"
			}
			element {
				name "MenuButton_About"
			}
			element {
				name "MenuButton_Close"
			}
		}
	}

	CIwUILayout {
		element {
			name "BGButton"
		}
		element {
			name "MenuButtons"
		}
	}
}
