CIwUIElement 
{
	name "MainScreen"

	CIwUIElement 
	{
		name "MainGrid"

		CIwUIElement {
			name "menuBar"
			sizeMax { -1 48 }
			
			CIwUIButton 
			{
				name "StopButton"
			
				drawableType "image"
				caption ""
				texture "stop"
				sizeToContent true
				OnButtonClick  { "MA_StopButtonClick" }
				visible false
			}
			CIwUIButton 
			{
				name "StartButton"
			
				drawableType "image"
				caption ""
				texture "play"
				sizeToContent true
				OnButtonClick  { "MA_StartButtonClick" }
			}
			CIwUIButton 
			{
				name "ExitButton"
			
				drawableType "image"
				caption ""
				texture "delete"
				sizeToContent true
				OnButtonClick  { "MA_ExitButtonClick" }
			}

			CIwUIButton {
				name "MenuButton"
			
				drawableType "image"
				caption ""
				texture "app"
				sizeToContent true
				OnButtonClick  { "MA_MenuButtonClick" }
			}
			
			CIwUILayoutGrid {
				sizeToSpace true
				numColumns 3
				numRows 1
				
				element {
					name "StopButton"
				}
				element {
					name "ExitButton"
				}
				element {
					name "MenuButton"
					alignH "centre"
					column 1
				}
				element {
					name "StartButton"
					alignH "right"
					column 2
				}
			}
		}

		CIwUIElement {
			name "TimeStatusElement"

			CIwUILayoutGrid {
				numColumns 1
				numRows 2
				sizeToSpace true
			}
		}

		CIwUILayoutGrid 
		{
			name "Grid"
			numColumns 2
			numRows 4
			sizeToSpace true

			element {
				name "TimeStatusElement"
				row 1
				column 1
			}
			
			element {
				name "menuBar"
				row 3
				columnSpan 2
			}
		}
	}
	CIwUILayout 
	{
		name "mainLayout"
		sizeToSpace true
				
		element 
		{
			name "MainGrid"
		}
	}
}
