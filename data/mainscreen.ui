CIwUIElement {
	name "MainScreen"

	CIwUIElement {
		name "MenuBar"
		sizeMax { -1 48 }

		CIwUIButton {
			name "menuBar_background"
			drawableType "image"
			caption ""
			texture "menuBar_bg"
			sizeMax { -1 -1 }
		}

		CIwUIButton {
			name "StopButton"
	
			drawableType "image"
			caption ""
			texture "stop"
			sizeToContent true
			OnButtonClick  { "MA_StopButtonClick" }
			visible false
		}

		CIwUIButton {
			name "StartButton"
	
			drawableType "image"
			caption ""
			texture "play"
			sizeToContent true
			OnButtonClick  { "MA_StartButtonClick" }
		}

		CIwUIButton {
			name "ExitButton"
	
			drawableType "image"
			caption ""
			texture "delete"
			sizeToContent true
			OnButtonClick  { "MA_ExitButtonClick" }
		}

		CIwUIButton {
			name "MenuButton"
	
			drawableType "image"
			caption ""
			texture "app"
			sizeToContent true
			OnButtonClick  { "MA_MenuButtonClick" }
		}

		CIwUIButton {
			name "PauseButton"
	
			drawableType "image"
			caption ""
			texture "pause"
			sizeToContent true
			OnButtonClick  { "CB_MAPauseButtonClick" }
			visible false
		}

		CIwUIButton {
			name "ContinueButton"
	
			drawableType "image"
			caption ""
			texture "play"
			sizeToContent true
			OnButtonClick  { "CB_MAContinueButtonClick" }
			visible false
		}

		CIwUILayout {
			sizeToSpace true

			element {
				name "menuBar_background"
			}
			element {
				name "StopButton"
				alignH "left"
			}
			element {
				name "ExitButton"
				alignH "left"
			}
			element {
				name "MenuButton"
				alignH "centre"
			}
			element {
				name "PauseButton"
				alignH "centre"
			}
			element {
				name "ContinueButton"
				alignH "centre"
			}
			element {
				name "StartButton"
				alignH "right"
			}
		}
	}

	CIwUIElement {
		name "MainGrid"
	}

	CIwUILayoutGrid {
		name "mainLayout"
		sizeToSpace true

		column { }
		row { }
		row { heightMin 48 heightMax 48 }
				
		element {
			name "MainGrid"
			row 0
		}
		element {
			name "MenuBar"
			row 1
		}
	}
}
