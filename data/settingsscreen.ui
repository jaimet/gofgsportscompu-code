CIwUIPropertySet  {
	name "<pathField>"
	parent <label_small>
	sizeToContent false
	oneLine true
	background <textField_background>
	cursorSize  { 3 17 }
	cursor <textField_cursor>
	focus <focus_textField>
}

CIwUIElement {
	name "SettingsScreen"

	CIwUIButton {
		name "Background"
		drawableType "image"
		caption ""
		texture "background"
		sizeMax { -1 -1 }
	}

	CIwUIElement {
		name "ContentContainer"

		CIwUILabel {
			name "TitleLabel"
			style <label_medium>
			caption "Settings"
			sizeMax { -1 24 }
			sizeToContent false
			alignV middle
			alignH centre
		}

		CIwUIElement {
			name "Content"

			CIwUILabel {
				name "MinLocationAccuracy_Label"
				style <label_medium>
				caption "Min. Location Accuracy (m):"
				sizeToContent true
			}
			CIwUITabBar {
				name "MinLocationAccuracy_Select"
				radioButtonStyles {
					{ caption "5" style <radio_left> } 
					{ caption "10" style <radio_centre> } 
					{ caption "20" style <radio_centre> } 
					{ caption "40" style <radio_right> } 
				}
				sizeMax { -1 32 }
			}

			CIwUIElement {
				name "TrackFolder_Pane"

				CIwUILabel {
					name "TrackFolder_Label"
					style <label_medium>
					caption "Track Folder:"
					sizeToContent true
				}

				CIwUIElement {
					name "TrackFolder_SelectPane"

					CIwUITextField {
						name "TrackFolder_Value"
						style <pathField>
						caption "/"
						sizeToContent false
						enabled false
					}

					CIwUIButton {
						name "TrackFolder_Button"
			
						drawableType "image"
						caption ""
						texture "folder24"
						sizeToContent true
						OnButtonClick  { "CB_SSTrackFolderButtonClick" }
					}

					CIwUILayoutGrid {
						numColumns 2
						numRows 1
						sizeToSpace true

						element {
							name "TrackFolder_Value"
							alignH "left"
							column 0
						}
						element {
							name "TrackFolder_Button"
							alignH "right"
							border { 4 0 }
							column 1
						}
					}
				}

				CIwUILayoutVertical {
					element {
						name "TrackFolder_Label"
					}
					element {
						name "TrackFolder_SelectPane"
					}
				}
			}

			CIwUIElement {
				name "ExportFolder_Pane"

				CIwUILabel {
					name "ExportFolder_Label"
					style <label_medium>
					caption "Export Folder:"
					sizeToContent true
				}

				CIwUIElement {
					name "ExportFolder_SelectPane"

					CIwUITextField {
						name "ExportFolder_Value"
						style <pathField>
						caption "/"
						sizeToContent false
						enabled false
					}

					CIwUIButton {
						name "ExportFolder_Button"
			
						drawableType "image"
						caption ""
						texture "folder24"
						sizeToContent true
						OnButtonClick  { "CB_SSExportFolderButtonClick" }
					}

					CIwUILayoutGrid {
						numColumns 2
						numRows 1
						sizeToSpace true

						element {
							name "ExportFolder_Value"
							alignH "left"
							column 0
						}
						element {
							name "ExportFolder_Button"
							alignH "right"
							border { 4 0 }
							column 1
						}
					}
				}

				CIwUILayoutVertical {
					element {
						name "ExportFolder_Label"
					}
					element {
						name "ExportFolder_SelectPane"
					}
				}
			}

			CIwUIElement {
				name "ExportEmail_Pane"

				CIwUILabel {
					name "ExportEmail_Label"
					style <label_medium>
					caption "Export E-Mail:"
					sizeToContent true
				}

				CIwUITextField {
					name "ExportEmail_Value"
					style <textField>
					caption "noreply@gofg.at"
					sizeToContent false
					keyboardLayout EmailAddress
				}

				CIwUILayoutVertical {
					element {
						name "ExportEmail_Label"
					}
					element {
						name "ExportEmail_Value"
					}
				}
			}

			CIwUICheckbox {
				name "WaitForGPSFix_Value"
				style <checkbox>
				caption "Wait for GPS fix"
			}

			CIwUICheckbox {
				name "UseZephyrHxM_Value"
				style <checkbox>
				caption "Use Zephyr HxM"
			}

			CIwUILabel {
				name "UpdateInterval_Label"
				style <label_medium>
				caption "Location update interval (s):"
				sizeToContent true
			}
			CIwUITabBar {
				name "UpdateInterval_Select"
				radioButtonStyles {
					{ caption "1" style <radio_left> } 
					{ caption "5" style <radio_centre> } 
					{ caption "15" style <radio_centre> } 
					{ caption "30" style <radio_centre> } 
					{ caption "60" style <radio_right> } 
				}
				sizeMax { -1 32 }
			}

			CIwUILayoutVertical {
				element {
					name "MinLocationAccuracy_Label"
				}
				element {
					name "MinLocationAccuracy_Select"
				}
				element {
					name "UpdateInterval_Label"
				}
				element {
					name "UpdateInterval_Select"
				}
				element {
					name "TrackFolder_Pane"
				}
				element {
					name "ExportFolder_Pane"
				}
				element {
					name "ExportEmail_Pane"
				}
				element {
					name "WaitForGPSFix_Value"
					alignH "left"
				}
				element {
					name "UseZephyrHxM_Value"
					alignH "left"
				}
			}
		}

		CIwUIElement {
			name "MenuBar"
			sizeMax { -1 48 }
	
			CIwUIButton {
				name "menuBar_background"
				drawableType "image"
				caption ""
				texture "menuBar_bg"
				sizeMax { -1 -1 }
			}
	
			CIwUIButton {
				name "LeftButton"
		
				drawableType "image"
				caption ""
				texture "delete"
				sizeToContent true
				OnButtonClick  { "CB_SSExitButtonClick" }
			}
	
			CIwUIButton {
				name "RightButton"
			
				drawableType "image"
				caption ""
				texture "floppy"
				sizeToContent true
				OnButtonClick  { "CB_SSSaveButtonClick" }
			}
	
			CIwUILayout {
				sizeToSpace true
	
				element {
					name "menuBar_background"
				}
				element {
					name "LeftButton"
					alignH "left"
				}
				element {
					name "RightButton"
					alignH "right"
				}
			}
		}

		CIwUILayoutGrid {
			sizeToSpace true

			column { }

			row { heightMin 24 heightMax 24	}
			row { }
			row { heightMin 48 heightMax 48 }

			element {
				name "TitleLabel"
				row 0
			}
			element {
				name "Content"
				border { 4 4 }
				row 1
			}
			element {
				name "MenuBar"
				row 2
			}
		}

	}
		
	CIwUILayout {
		sizeToSpace true

		element {
			name "Background"
		}
		element	{
			name "ContentContainer"
		}
	}
}
